@using NaijaQuickFix.Models;
@using NaijaQuickFix.Helper;
@model NaijaQuickFix.Helper.PagedData<Artisan>
@{
    var currentFilter = ViewBag.CurrentFilter;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    @Html.Partial("../Partials/MetaPartial")
    <title>Naija QuickFix Artisans | An Online Platform For Connecting All Nigerians To various Artisans</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/table.css")
    @Scripts.Render("~/bundles/modernizr")
<style>
    .artisan_status {
        width: 150px;
        border: none;
        padding: 0.4em 0em;
        padding-left: 0.4em;
        margin-bottom: 1em;
        outline: none;
        background-color: transparent;
        color: var(--theme-color);
        transition: all 500ms;
        top: 0px;
        transform: translateY(-200px);
    }

    .active {
        top: 20px;
        transform: translateY(0);
    }
        .artisan_status li {
            margin-bottom: .4em;
        }
        .artisan_status li a{
            color: var(--white-smoke);
            font-family: var(--Poppins);
        }
    .select_status {
        width: 150px;
        font-size: 1.3em;
        border: none;
        padding: 0.4em 0em;
        outline: none;
        background-color: transparent;
        color: var(--white-smoke);
        cursor: pointer;
    }
</style>
<body>
    @Html.Partial("../Partials/DashboardPartial")
    <div class="admin-dashboard">
        @Html.Partial("../Partials/DashboardNavPartial")

        <div class="table-container main-view">
            <div class="card">
                <div class="options">
                    <div class="select_status">Select</div>
                    <ul class="artisan_status">
                        @foreach (Helper.EntityManagementFilterEnum filter in Enum.GetValues(typeof(Helper.EntityManagementFilterEnum)))
                        {
                            <li><a href="@Url.Action("Allartisans", "Dashboard", new { currentFilter = (int)filter })">@Helper.GetFilter(filter)</a></li>
                        }
                    </ul>
                </div>
                <table class="table" id="tabl">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Job Description</th>
                            <th>NIN</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="data-list">
                        @foreach (var item in Model.Data.OrderByDescending(a => a.Id))
                        {
                            <tr id="item-@item.Id">
                                <td data-label="id">@item.Id</td>
                                <td data-label="FirstName">@item.FullName</td>
                                <td data-label="jobDescription">@item.JobDescription</td>
                                <td data-label="nin">@item.NIN</td>
                                <td>
                                    <a id="view" href="@Url.Action("ArtisanDetails", "Dashboard", new { Id = @item.Id })"><img src="../Images/view.png" class="view-btn" /></a>
                                    @if (item.Status == (int)Helper.Entity_Status.Public)
                                    {
                                        <a href="#" class="label label-danger btn-unpublic-product btn-action" data-id="@item.Id"><i class="fa fa-thumbs-down"></i>&nbsp;UnPublic</a>
                                    }
                                    else if (item.Status == (int)Helper.Entity_Status.UnPublic)
                                    {
                                        <a href="#" class="label label-success btn-public-product btn-action" data-id="@item.Id"><i class="fa fa-thumbs-up"></i>&nbsp;Public</a>
                                    }




                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                @Html.Partial("../Paging/PagingPartial", new NaijaQuickFix.Models.Paging.PageModel(Model.CurrentPage, Model.NumberOfPages, "/dashboard/allartisans?currentFilter=" + currentFilter + "&page="))
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/Scripts/dashboard.js")

    <script>
        $(".select_status").on("click", function () {
            $(".artisan_status").toggleClass("active");
        });
        $(document).ready(function () {

            $("#tabl .btn-unpublic-product").on("click", function () {
                console.log('hey');
                if (confirm("Are you sure you want to unpublic this Artisan?")) {
                    $.ajax({

                        type: "POST",
                        url: "/Dashboard/UnPublicArtisan/" + $(this).attr("data-id"),
                        content: "application/json;charset=utf-8",
                        dataType: "json",
                        data: $(this.form).serialize(),
                        success: function () {
                            console.log("sammo");
                        }
                    })
                };
            });
            ////////////////////////////////////////////////////////////////////////////////////////
            ////////////////////////////////////////////////////////////////////////////////////////
            //////////////////////PUBLIC///////////////////////////////////////////////////////////
            $("#tabl .btn-public-product").on("click", function () {
                console.log('hey');
                if (confirm("Are you sure you want to public  this Artisan?")) {
                    $.ajax({

                        type: "POST",
                        url: "/Dashboard/PublicArtisan/" + $(this).attr("data-id"),
                        content: "application/json;charset=utf-8",
                        dataType: "json",
                        data: $(this.form).serialize(),
                        success: function () {
                            console.log("sammo");
                        }
                    })
                };
            });


        })

    </script>

    @*@Scripts.Render("~/Scripts/lib")*@

    @*@Scripts.Render("~/Scripts/Global/layout.js")*@
    @*@Scripts.Render("~/Scripts/Global/ManageArtisan.js")*@





    @*@Scripts.Render("~/bundles/lib")*@


</body>
</html>

